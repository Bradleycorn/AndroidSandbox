<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/primaryColor</item>
        <item name="colorPrimaryDark">@color/primaryDarkColor</item>
        <item name="colorAccent">@color/secondaryColor</item>
        <item name="colorError">@color/errorColor</item>





        <item name="android:textViewStyle">@style/AppTheme.TextView</item>


    </style>

    <style name="TempTheme" parent="Theme.MaterialComponents.Light.Bridge" />


    <style name="AppTheme.TextView" parent="android:Widget.Material.Light.TextView">
        <item name="android:textAppearance">@style/TextAppearance.MaterialComponents.Body1</item>
    </style>

    <style name="AppTheme.Toolbar" parent="@style/ThemeOverlay.MaterialComponents.Dark.ActionBar"></style>
</resources>
